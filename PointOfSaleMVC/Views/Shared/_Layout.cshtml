<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />*@
    <link href="~/Content/home.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/master.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-inverse navbar-dark bg-primary">
        <button class="navbar-toggler pull-left" type="button" data-toggle="collapse-side" data-target=".side-collapse" data-target-2=".side-collapse-container" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand"  href="@Url.Action("Index", "Home")">StoreMS</a>
        <div class="navbar-inverse side-collapse in" id="navbarColor01">
            <nav role="navigation" class="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown" id="admin">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-menu"></i>Setup</a>
                        <div class="dropdown-menu" id="adminDropdown">
                            <a class="dropdown-item" href="@Url.Action("ItemCategorySetup","Setup")" id="categorySetup">Category Setup</a>
                            <a class="dropdown-item" href="@Url.Action("ItemSetup", "Setup")">Item Setup</a>
                            <a class="dropdown-item" href="@Url.Action("ExpenseCategorySetup", "Setup")">Expense Setup</a>
                            <a class="dropdown-item" href="@Url.Action("OrganizationSetup", "Setup")">Organization Setup</a>
                            <a class="dropdown-item" href="@Url.Action("BranchSetup", "Setup")">Branch Setup</a>
                            <a class="dropdown-item" href="@Url.Action("PartySetup", "Setup")">Party Setup</a>
                            <a class="dropdown-item" href="@Url.Action("EmployeeSetup", "Setup")">Employee Setup</a>
                            <a class="dropdown-item" href="@Url.Action("ViewEmployees", "Setup")">View Employees</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown" id="operation">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Operations</a>
                        <div class="dropdown-menu" id="operationDropdown">
                            <a class="dropdown-item" href="@Url.Action("PurchaseOperation","Operation")">Purchase Operation</a>
                            <a class="dropdown-item" href="@Url.Action("SalesOperation", "Operation")">Sales Operation</a>
                            <a class="dropdown-item" href="@Url.Action("SalesOperation", "Operation")">Expense Operation</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown" id="report">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Reports</a>
                        <div class="dropdown-menu" id="reportDropdown">
                            <a class="dropdown-item" href="@Url.Action("PurchaseReport","Report")">Purchase Report</a>
                            <a class="dropdown-item" href="@Url.Action("SalesReport","Report")">Sales Report</a>
                            <a class="dropdown-item" href="@Url.Action("ExpenseReport","Report")">Expense Report</a>
                            <a class="dropdown-item" href="@Url.Action("StockReport","Report")">Stock Report</a>
                            <a class="dropdown-item" href="@Url.Action("IncomeReport","Report")">Income Report</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </nav>
    <div class="container body-content side-collapse-container">
        @RenderBody()
        @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Master.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
