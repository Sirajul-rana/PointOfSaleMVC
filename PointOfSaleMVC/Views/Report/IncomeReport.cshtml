
@{
    ViewBag.Title = "Income Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Income Report</h2>
<hr class="my-4" />
<div class="form-horizontal">
    <div class="row">
        <div class="col-md">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        @Html.Label("Branch", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-7">
                        @Html.DropDownList("BranchId", new SelectList(Enumerable.Empty<SelectListItem>(), "BranchId", "BranchName"), "Select Branch", new { @class = "form-control" })
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        @Html.Label("From Date", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-7">
                        @Html.TextBox("FromDate", null, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        @Html.Label("To Date", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-7">
                        @Html.TextBox("ToDate", null, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-success">Show</button>
    </div>

    <div class="row">
        <div class="col-md">
            <h4>Purchase Report</h4>
            <hr class="my-4" />
            <table class="table table-bordered table-responsive-md table-hover table-striped table-light css-serial" id="purchaseResultTable" style="border: none">
                <tr class="thead-dark">
                    <th>
                        SL
                    </th>
                    <th>
                        @Html.DisplayName("Date")
                    </th>
                    <th>
                        @Html.DisplayName("Description")
                    </th>
                    <th>
                    <th>
                        @Html.DisplayName("Purchase Amount")
                    </th>
                </tr>
                <tbody id="purchaseResultTableBody"></tbody>
            </table>
        </div>
        <div class="col-md">
            <h4>Sales Report</h4>
            <hr class="my-4" />
            <table class="table table-bordered table-responsive-md table-hover table-striped table-light css-serial" id="purchaseResultTable" style="border: none">
                <tr class="thead-dark">
                    <th>
                        SL
                    </th>
                    <th>
                        @Html.DisplayName("Date")
                    </th>
                    <th>
                        @Html.DisplayName("Description")
                    </th>
                    <th>
                    <th>
                        @Html.DisplayName("Sales Amount")
                    </th>
                </tr>
                <tbody id="ResultTableBody"></tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h4>Summary</h4>
            <hr class="my-4" />
            <table class="table table-bordered table-responsive-md table-hover table-striped table-light css-serial" id="purchaseResultTable" style="border: none">
                <tr class="thead-dark">
                    <th>
                        SL
                    </th>
                    <th>
                        @Html.DisplayName("Total Purchase")
                    </th>
                    <th>
                        @Html.DisplayName("Total Sales")
                    </th>
                    <th>
                    <th>
                        @Html.DisplayName("Total Profit")
                    </th>
                </tr>
                <tbody id="TableBody"></tbody>
            </table>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-success">Print</button>
        <button type="button" class="btn btn-danger" id="closePurchaseResult" data-dismiss="modal">Clear</button>
    </div>
</div>
