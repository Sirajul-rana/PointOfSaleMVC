@using PointOfSaleMVC.Models
@model PointOfSaleMVC.Models.Organization

@{
    ViewBag.Title = "OrganizationSetup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Organization Setup</h2>
<hr class="my-4"/>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "saveOrganizationForm", name = "saveOrganizationForm" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md"></div>
        <div class="col-md">
            <div class="form-group">
                @Html.LabelFor(model => model.OrganizationName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OrganizationName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OrganizationName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OrganizationCode, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OrganizationCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OrganizationCode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OrganizationContactNo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OrganizationContactNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OrganizationContactNo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OrganizationAddress, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.OrganizationAddress, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OrganizationAddress, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Save" id="saveOrganizationButton" name="saveOrganizationButton" class="btn btn-success" />
                    <input type="button" value="Cancel" id="cancelOrganizationButton" name="cancelOrganizationButton" class="btn btn-danger" />
                </div>
            </div>
        </div>
        <div class="col-md"></div>
    </div>
</div>
}
<table class="table table-bordered table-hover table-striped table-light css-serial">
    <tr class="thead-dark">
        <th>
            SL
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Code")
        </th>
        <th>
            @Html.DisplayName("Contact")
        </th>
        <th>
            @Html.DisplayName("Address")
        </th>
        @*<th>
            @Html.DisplayName("Image")
        </th>*@
        <th>
            @Html.DisplayName("Action")
        </th>
    </tr>

    <tbody id="organizationTableBody">
        @foreach (var item in (List<Organization>)ViewBag.Organizations)
        {
        <tr>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationAddress)
            </td>
            <td>
                <button type="button" id="btnEdit" class="btn btn-primary btnEdit"><i class="fa fa-edit"></i></button>
                <button type="button" class="btn btn-danger btnDelete" id="btnDelete"><i class="fa fa-remove"></i></button>
            </td>
        </tr>
        }
    </tbody>
</table>
