@using PointOfSaleMVC.Models
@model PointOfSaleMVC.Models.Party

@{
    ViewBag.Title = "PartySetup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Party Setup</h3>
<hr class="my-4" />
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "savePartyForm", name = "savePartyForm" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md">
            <div class="form-group">
                @Html.LabelFor(model => model.PartyTypeId, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.PartyTypeId, (SelectList)ViewBag.AllParties, "Select Party Type", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PartyTypeId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PartyName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PartyName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PartyName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PartyContactNo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PartyContactNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PartyContactNo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PartyEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PartyEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PartyEmail, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md">
            <div class="form-group">
                @Html.LabelFor(model => model.PartyCode, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PartyCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PartyCode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PartyAddress, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.PartyAddress, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PartyAddress, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Save" id="savePartyButton" name="savePartyButton" class="btn btn-success" />
                    <input type="button" value="Cancel" id="cancelPartyButton" name="cancelPartyButton" class="btn btn-danger" />
                </div>
            </div>
        </div>
    </div>
    

    
</div>
}

<table class="table table-bordered table-hover table-striped table-light css-serial" id="partyTable">
    <tr class="thead-dark">
        <th>
            SL
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartyTypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartyCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartyContactNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartyEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartyAddress)
        </th>
        <th>
            @Html.DisplayName("Action")
        </th>
    </tr>

    <tbody id="partyTableBody">
    @foreach (var item in (List<Party>)ViewBag.Parties)
    {
        <tr>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.PartyType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartyContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartyEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartyAddress)
            </td>
            <td>
                <button type="button" id="btnEdit" class="btn btn-primary btnEdit"><i class="fa fa-edit"></i></button>
                <button type="button" class="btn btn-danger btnDelete" id="btnDelete"><i class="fa fa-remove"></i></button>
            </td>
        </tr>
    }
    </tbody>
</table>
